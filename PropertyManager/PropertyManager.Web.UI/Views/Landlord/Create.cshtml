@model PropertyManager.ViewModels.Application.Landlords.Commands.CreateLandlordRequest;
@{
    ViewData["Title"] = "Create Landlord";
}
<h1>Create Landlord</h1>
<form id="form-landlord-create" method="post" asp-controller="landlord" asp-action="create">
    <span class="text-danger">
        @ViewData["Message"]
    </span>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Title"></label>
            <input class="form-control" asp-for="Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="FirstName"></label>
            <input class="form-control" asp-for="FirstName" />
            <small class="form-text text-muted">Required</small>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="MiddleNames"></label>
            <input class="form-control" asp-for="MiddleNames" />
            <span asp-validation-for="MiddleNames" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="LastName"></label>
            <input class="form-control" asp-for="LastName" />
            <small class="form-text text-muted">Required</small>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
        <small class="form-text text-muted">Required</small>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="MobilePhone"></label>
            <input class="form-control" asp-for="MobilePhone" />
            <small class="form-text text-muted">Required</small>
            <span asp-validation-for="MobilePhone" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="HomePhone"></label>
            <input class="form-control" asp-for="HomePhone" />
            <span asp-validation-for="HomePhone" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="RegisterNumber"></label>
            <input class="form-control" asp-for="RegisterNumber" />
            <small class="form-text text-muted">Required</small>
            <span asp-validation-for="RegisterNumber" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Dob"></label>
            <input class="form-control" asp-for="Dob" value="@DateTime.Now" />
            <small class="form-text text-muted">Required</small>
            <span asp-validation-for="Dob" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <button class="btn btn-success" type="submit">Submit</button>
    </div>
</form>